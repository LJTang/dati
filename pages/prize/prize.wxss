/* pages/prize/prize.wxss */
page{
  background-color: #f5b653;
}
.tab{
  padding: 3% 0;
}
.tab view{
  width: 220rpx;
  height: 80rpx;
  position: relative;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}
.tab view image{
  width: 220rpx;
  height: 80rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.tab .jiang{
  margin-left: 100rpx;
}
.tab .yili{
  margin-right: 100rpx;
  color: rgba(255, 255, 255, .5)
}
.list_box{
  position: fixed;
  background-color: #fbe6c4;
  width: 94%;
  left: 3%;
  top: 140rpx;
  bottom: 140rpx;
  border-radius: 10px;
}
.list_box .zhou_y{
  position: absolute;
  top: 6%;
  bottom: 6%;
  left: 3%;
  right: 3%;
  overflow-y: auto;
}
.list_box .list{
  width: 320rpx;
  margin-bottom: 40rpx;
}
.list_box .list .img_box{
  width: 320rpx;
  height: 300rpx;
  background-color: #dbd6f8;
  position: relative;
}
.list_box .list .img_box .img{
  width: 320rpx;
  height: 300rpx;
  display: block;
}
.list_box .list .img_box .bnt{
  width: 110rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  background-color: #f5b653;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
.list_box .list .price{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #9686f5;
}
.list_box .list .price image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 10rpx 8rpx 0 20rpx; 
}
.list_box .list .price view{
  color: #fff;
  font-size: 28rpx;
}