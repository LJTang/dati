/* pages/game/game.wxss */
page{
  background-color: #cf7df0;
}
.num{
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  margin-top: 100rpx;
}
.problem{
  width: 90%;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  margin: 100rpx auto 0 auto;
  line-height: 170%;
}
.judge{
  width: 94%;
  padding: 3%;
  border-radius: 10px;
  background-color: rgba(0, 0, 0, .3);
  position: fixed;
  left: 3%;
  bottom: 3%;
  box-sizing: border-box;
}
.judge .no{
  width: 300rpx;
  height: 300rpx;
  background-color: #5757ed;
  border-radius: 10px;
  position: relative;
}
.judge .yes{
  width: 300rpx;
  height: 300rpx;
  background-color: #f51756;
  border-radius: 10px;
  position: relative;
}
.judge image{
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.judge .active {
  transform: translateY(4px);
}
.fail,.success{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
}
.fail .box{
  width: 65%;
  position: relative;
}
.fail .box .title{
  width: 456rpx;
  height: 141rpx;
  display: block;
  margin: 0 auto 150rpx auto;
}
.fail .box .top{
  background-color: #fff;
  border-radius: 10px;
  padding: 5%;
}
.fail .box .top .left{
  font-size: 30rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
}
.fail .box .top .right{
  width: 100rpx;
  height: 80rpx;
  background-color: #e714dc;
  border-radius: 5px;
  text-align: center;
  /* padding-top: 16rpx; */
  box-sizing: border-box;
}
.fail .box .top .right image{
  width: 52rpx;
  height: 48rpx;
 vertical-align:top;
  margin-top:6px;
}
.fail .box .goindex{
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin-top: 40rpx;
  text-decoration: underline;
}
.success .success_box{
  width: 80%;
  position: relative;
}
.success .success_box .s_title{
  width: 456rpx;
  height: 286rpx;
  display: block;
  margin: 0 auto 40rpx auto;
}
.success .success_box .top{
  background-color: #c11ab8;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  padding: 5% 0;
  text-align: center;
}
.success .success_box .top .title{
  font-size: 30rpx;
  color: #fff;
}
.success .success_box .top .num{
  font-size: 70rpx;
  color: #fff;
  margin: 40rpx 0;
}
.success .success_box .top .nums{
  font-size: 30rpx;
  color: #fff;
}
.success .paiming{
  background-color: #fff;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  padding: 8% 0 4% 0;
}
.success .paiming .pai_list{
  position: relative;
  width: 140rpx;
  text-align: center;
  margin: 0 20rpx;
}
.success .paiming .pai_list .img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 100%;
  display: block;
}
.success .paiming .pai_list .name{
  color: #333;
  font-size: 30rpx;
  margin-top: 15rpx;
}
.success .paiming .pai_list .fen{
  color: #c11ab8;
  font-size: 30rpx;
  margin-top: 15rpx;
}
.success .paiming .pai_list .number{
  width: 52rpx;
  height: 36rpx;
  line-height: 36rpx;
  background-color: #e714dc;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  top: -20rpx;
  left: 50%;
  margin-left: -26rpx;
}
.success .paiming .bnt{
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #e714dc;
  border-radius: 35rpx;
  margin: 50rpx auto 0 auto;
}
.success .paiming .bnt text{
  font-size: 28rpx;
  color: #fff;
  margin-left: 80rpx;
  font-weight: 700;
}
.success .paiming .bnt image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-right: 80rpx;
}
.success .down{
  padding: 0 3%;
  margin-top: 30rpx;
}
.success .down view{
  font-size: 28rpx;
  color: #fff;
}
.success .down image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}
.top_time{
  width: 150rpx;
  height: 150rpx;
  border: 7px solid #fff;
  border-radius: 100%;
  text-align: center;
  margin: 20rpx auto 0 auto;
}
.top_time .title{
  font-size: 30rpx;
  color: #fff;
  width: 100%;
}
.top_time .djs{
  font-size: 60rpx;
  color: #fff;
  width: 100%;
}

