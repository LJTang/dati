/**index.wxss**/
page{
  background-color: #cf7df0;
}
.follow{
  position: fixed;
  right: 0;
  bottom: 33%;
  width: 160rpx;
  height: 90rpx;
  background-color: #F84112;
  border-top-left-radius: 45rpx;
  border-bottom-left-radius: 45rpx;
  padding-top: 6rpx;
  padding-left: 16rpx;
  box-sizing: border-box;
}
.follow view{
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  font-weight: 700;
}
.index_title{
  font-size: 48rpx;
  color: #333;
  text-align: center;
}
.index_type{
  position: relative;
  height: 70rpx;
  margin-top: 40rpx;
}
.index_type .paiwei{
  width: 200rpx;
  height: 70rpx;
  border-radius: 48rpx;
  border: 2px solid #FFFF00;
  color:#fff;
  font-size: 38rpx;
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  background-color: #cf7df0;
}
.index_type .hengx{
  height: 3px;
  background-color: #FFFF00;
  box-shadow: 0 1px 3px #333;
  width: 100%;
  position: absolute;
  left: 0;
  top: 33rpx;
  z-index: 1
}
.shuoming{
  width:60%;
  color:#fff;
  font-size:32rpx;
  font-weight:700;
  text-align: justify;
  margin: 20rpx auto;
}
.pk_bnt{
  width: 232rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  font-size: 40rpx;
  position: relative;
  margin: 0 auto;
}
.pk_bnt image{
  width: 232rpx;
  height: 110rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.challenge .index_type .paiwei{
  border:2px solid #F84112;
}
.challenge .index_type .hengx{
  background-color: #F84112;
}
.challenge .pk_bnt{
  width: 224rpx;
  height: 158rpx;
  color: #fff;
  font-size: 35rpx;
}
.challenge .pk_bnt image{
  width: 224rpx;
  height: 158rpx;
}
.bi_box{
  margin-left: 50rpx;
}
.bi_box .bi{
  width: 56rpx;
  height: 56rpx;
}
.bi_box .num{
  font-size: 28rpx;
  color: #fff;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.bi_box .nums{
  font-size: 28rpx;
  color: #fff;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.bi_box .nums image{
  width: 44rpx;
  height: 24rpx;
  margin: 0 10rpx;
}
.piao_box{
  margin-left: 50rpx;
}
.piao_box .piao{
  width: 70rpx;
  height: 40rpx;
}
.piao_box .num{
  font-size: 28rpx;
  color: #fff;
  margin-left: 20rpx;
}
.fix_nav{
  background-color: #cf7df0;
  
}
.follow_show{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}
.follow_show .show_box{
  position: relative;
  width: 670rpx;
  height: 766rpx;
}
.follow_show .show_box .back{
  width: 670rpx;
  height: 766rpx;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
}
.follow_show .show_box .content{
  position: relative;
  width: 94%;
  margin: 0 auto;
  background-color: #f18d53;
  padding:6% 3%;
  box-sizing: border-box;
}
.follow_show .show_box .content .text{
  color: #000;
  font-size: 28rpx;
  line-height: 150%;
  margin-bottom: 10rpx;
}
.follow_show .show_box .content .text image{
  width: 80rpx;
  height: 35rpx;
  display: block;
  margin-top: 4rpx;
}
.follow_show .show_box .content .text .strong{
  font-weight: 700;
}
.follow_show .show_box .title{
  font-size:  36rpx;
  font-weight: 700;
  margin: 266rpx 0 40rpx 0;
  position: relative;
  text-align: center;
}

.fail,.success{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
}
.fail .box{
  width: 65%;
  position: relative;
}
.fail .box .title{
  width: 456rpx;
  height: 141rpx;
  display: block;
  margin: 0 auto 150rpx auto;
}
.fail .box .top{
  background-color: #fff;
  border-radius: 10px;
  padding: 5%;
}
.fail .box .top .left{
  font-size: 30rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
}
.fail .box .top .right{
  width: 100rpx;
  height: 80rpx;
  background-color: #e714dc;
  border-radius: 5px;
  text-align: center;
  /* padding-top: 16rpx; */
  box-sizing: border-box;
}
.fail .box .top .right image{
  width: 52rpx;
  height: 48rpx;
  vertical-align:top;
  margin-top:6px;
}
.fail .box .goindex{
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin-top: 40rpx;
  text-decoration: underline;
}