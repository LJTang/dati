/**app.wxss**/

.bf{
  background-color: #fff;
}
.bor{
  border-radius: 5px;
}
button::after{
  border:none;
}
input{
  outline:none;
  border:none;
  list-style: none;
}
.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content:flex-start;
  box-sizing: border-box;
}
.container_c{
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.flex_center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.cf:after {
  content: "";
  display: table;
  height: 0;
  clear: both;
  visibility: hidden;
}
.p3{
  padding: 3%;
}
.ptb{
  padding:0 3%;
}
.pb{
  padding-bottom: 250rpx;
}
.omit{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.big_bnt{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #E04239;
  font-size: 28rpx;
  color: #fff;
  border-radius: 3px;
}
.big_bnt9{
  width: 90%;
  margin: 0 auto;
}
.bnt2{
  width: 20%;
  height: 70rpx;
  line-height: 70rpx;
} 
.fixed{
  position: fixed;
  width: 100%;
}

.mask{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .7);
}
.fix_nav{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  height: 110rpx;
  background-color: #f5b653;
  border-top: 1px solid rgba(255, 255, 255, .2)
}
.fix_nav .navigator{
  text-align: center;
  width: 25%;
}
.fix_nav image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 auto;
}
.fix_nav text{
  font-size: 28rpx;
  color: rgba(255, 255, 255, .5);
  display: block;
  line-height: 150%;
}
.fix_nav text.on{
  color: #fff;
}

/**
** 弹出框
 */

.popUp_Box{
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
  z-index: 100;
}
.shadow{
  height:100%;
  width:100%;
  position:relative;
  background:#000;
  opacity:0.5;
  filter:alpha(opacity=50);
  z-index:10;
}
.show_Layer{
  position: absolute;
  background:#fff;
  border-radius:5px;
  z-index:11;
}
.centered{
  top:15%;
  left:50rpx;
}
.fixed_WH{
  width:650rpx;
  height:70%;
  top:15%;
  left:50rpx;
}
.authorized_Box{
  width:550rpx;
  height:350rpx;
  top:50%;
  margin-top: -250rpx;
  left:100rpx;
}
/*
***关闭按钮
*/
.show_Layer .clear{
  height:70rpx;
  margin:20rpx 20rpx 0;
}
/*
***授权框
*/
.authorized_Box{
  font-size:32rpx;
  text-align: center;
}
.authorized_Describe{
  line-height: 249rpx;
}
.authorized_Btn{
  width: 550rpx;
  height:100rpx;
  line-height:100rpx;
  display: flex;
  border-top:1rpx solid #999;
}
.authorized_Btn .btn_Cancel,.authorized_Btn .btn_OK{
  width:275rpx;
  line-height:100rpx;
}
.authorized_Btn .btn_Cancel{
  border-right:1rpx solid #999;
}
.authorized_Btn button{
  height:100rpx;
  line-height:100rpx;
  margin:0;
  padding: 0;
  background:none;
  border:none;
  font-size:32rpx;
  color:#00c670;
}
button::after{
  border:none;
}
